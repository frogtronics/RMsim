#include <array>
#include<fstream>
#include <string>
#include <sstream>


int n_rows = 100;
int n_cols = 15;

std::array<std::array<float, n_cols>, n_rows> inputdata;//i rows, j cols
std::ifstream datfile("xyzPOINTS.txt");

for (int i = 0; i < n_rows; ++i) {
	for (int j = 0; j < ncols; ++j) {
		datfile >> inputdata[i][j];
	}


